# .env.beta.example
# BETA Staging Environment Configuration
# Используется для staging тестирования с хостинговыми сервисами

APP_STAGE="BETA"

# Authentication
AUTH_SECRET="your-nextauth-secret-here"

# AI Services
GOOGLE_GENERATIVE_AI_API_KEY="your-google-gemini-api-key"
XAI_API_KEY=""

# File Storage
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# BETA Database (Neon PostgreSQL staging)
DATABASE_URL="postgresql://betauser:betapassword@beta-host.neon.tech/welcomecraft_beta?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://betauser:betapassword@beta-host.neon.tech/welcomecraft_beta?sslmode=require"
POSTGRES_URL="postgresql://betauser:betapassword@beta-host.neon.tech/welcomecraft_beta?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://betauser:betapassword@beta-host.neon.tech/welcomecraft_beta?connect_timeout=15&sslmode=require"
NEON_PROJECT_ID="your-beta-neon-project-id"

# BETA Redis (Upstash Redis staging)
REDIS_URL="rediss://default:your-beta-token@beta-redis.upstash.io:6379"
UPSTASH_REDIS_REST_URL="https://beta-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-beta-upstash-token"

# Vercel Integration
VERCEL_OIDC_TOKEN="your-beta-vercel-oidc-token"

# Development optimization (меньше debug в staging)
WEBPACK_LOGGING="false"
NEXT_TELEMETRY_DISABLED="1"
DEBUG=""
LOG_LEVEL="info"