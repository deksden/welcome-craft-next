# ===============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# PHOENIX PROJECT - Production Environment
# ===============================================

# App Stage - PRODUCTION environment
APP_STAGE=PROD

# Node Environment - production mode
NODE_ENV=production

# Authentication - PRODUCTION secrets
AUTH_SECRET=your-production-auth-secret-here
NEXTAUTH_URL=https://app.welcome-onboard.ru

# Database - PRODUCTION database (Vercel Postgres)
POSTGRES_URL=your-production-postgres-url-here
DATABASE_URL=your-production-database-url-here

# AI API - PRODUCTION API key with appropriate quotas
XAI_API_KEY=your-production-xai-api-key-here

# File Storage - PRODUCTION Vercel Blob
BLOB_READ_WRITE_TOKEN=your-production-blob-token-here

# Redis - PRODUCTION cache (Vercel KV)
REDIS_URL=your-production-redis-url-here

# PRODUCTION Environment Features
# Test session support DISABLED in production
ENABLE_TEST_SESSIONS=false
# World isolation DISABLED in production
ENABLE_TEST_WORLDS_UI=false
# Debug mode DISABLED
DEBUG_MODE=false

# Monitoring and Analytics (PRODUCTION)
ANALYTICS_ENABLED=true
SENTRY_DSN=your-production-sentry-dsn-here
VERCEL_ANALYTICS_ID=your-vercel-analytics-id-here

# Performance settings for PRODUCTION
WEBPACK_LOGGING=false
NEXT_TELEMETRY_DISABLED=1
DEBUG=""

# PRODUCTION Security Settings
# Maximum security for production
CORS_ORIGINS=https://welcome-onboard.ru,https://app.welcome-onboard.ru
COOKIE_SECURE=true  # HTTPS only
CSRF_PROTECTION=true
RATE_LIMITING=true

# Feature Flags for PRODUCTION
FEATURE_NEW_SITE_EDITOR=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_SUGGESTIONS=true

# Vercel Environment Variables
VERCEL=1
VERCEL_ENV=production
VERCEL_URL=welcome-onboard.ru

# Cache and CDN settings
CDN_URL=https://cdn.welcome-onboard.ru
STATIC_CACHE_TTL=31536000  # 1 year