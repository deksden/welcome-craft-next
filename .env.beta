# ===============================================
# BETA ENVIRONMENT CONFIGURATION
# PHOENIX PROJECT - Staging Environment 
# ===============================================

# App Stage - BETA staging environment
APP_STAGE=BETA

# Node Environment - production mode for realistic testing
NODE_ENV=production

# Authentication
AUTH_SECRET=your-beta-auth-secret-here

# Database - BETA staging database
POSTGRES_URL=postgresql://betauser:betapassword@localhost:5435/welcomecraft_beta

# AI API - separate key for staging to avoid production quota issues
XAI_API_KEY=your-beta-xai-api-key-here

# File Storage - BETA blob storage
BLOB_READ_WRITE_TOKEN=your-beta-blob-token-here

# Redis - BETA cache
REDIS_URL=redis://localhost:6381

# BETA Environment Features
# Test session support ENABLED for staging testing
ENABLE_TEST_SESSIONS=true
# World isolation ENABLED for staging world testing
ENABLE_TEST_WORLDS_UI=true
# Debug mode for staging
DEBUG_MODE=true

# Monitoring and Analytics (BETA)
# Separate analytics for staging environment
ANALYTICS_ENABLED=false
SENTRY_DSN=your-beta-sentry-dsn-here

# Performance settings for BETA
WEBPACK_LOGGING=false
NEXT_TELEMETRY_DISABLED=1
DEBUG=""

# BETA Security Settings
# More permissive for testing, but still secure
CORS_ORIGINS=http://localhost:3000,https://beta.welcome-onboard.ru
COOKIE_SECURE=false  # HTTP for local BETA testing
CSRF_PROTECTION=true

# Feature Flags for BETA
FEATURE_NEW_SITE_EDITOR=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_AI_SUGGESTIONS=true