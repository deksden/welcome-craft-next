# .env.local.example
# LOCAL Development Environment Configuration
# Используется для локальной разработки с Docker контейнерами

APP_STAGE="LOCAL"

# Authentication
AUTH_SECRET="your-nextauth-secret-here"

# AI Services
GOOGLE_GENERATIVE_AI_API_KEY="your-google-gemini-api-key"
XAI_API_KEY=""

# File Storage
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# LOCAL Database (Docker PostgreSQL на порту 5434)
DATABASE_URL="postgresql://localuser:localpassword@localhost:5434/welcomecraft_local"
DATABASE_URL_UNPOOLED="postgresql://localuser:localpassword@localhost:5434/welcomecraft_local"
POSTGRES_URL="postgresql://localuser:localpassword@localhost:5434/welcomecraft_local"
POSTGRES_PRISMA_URL="postgresql://localuser:localpassword@localhost:5434/welcomecraft_local"

# LOCAL Redis (Docker Redis на порту 6380)
REDIS_URL="redis://localhost:6380"

# Optional services (для fallback)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
VERCEL_OIDC_TOKEN=""
NEON_PROJECT_ID=""

# Development optimization
WEBPACK_LOGGING="false"
NEXT_TELEMETRY_DISABLED="1"
DEBUG="*,-vite*,-connect*,-micromark*"
LOG_LEVEL="trace"