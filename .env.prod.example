# .env.prod.example
# PRODUCTION Environment Configuration
# Используется для production хостинга с полными хостинговыми сервисами

APP_STAGE="PROD"

# Authentication
AUTH_SECRET="your-production-nextauth-secret-here"

# AI Services
GOOGLE_GENERATIVE_AI_API_KEY="your-production-google-gemini-api-key"
XAI_API_KEY=""

# File Storage
BLOB_READ_WRITE_TOKEN="your-production-vercel-blob-token"

# PRODUCTION Database (Neon PostgreSQL production)
DATABASE_URL="postgresql://produser:prodpassword@prod-host.neon.tech/welcomecraft_prod?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://produser:prodpassword@prod-host.neon.tech/welcomecraft_prod?sslmode=require"
POSTGRES_URL="postgresql://produser:prodpassword@prod-host.neon.tech/welcomecraft_prod?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://produser:prodpassword@prod-host.neon.tech/welcomecraft_prod?connect_timeout=15&sslmode=require"
NEON_PROJECT_ID="your-production-neon-project-id"

# PRODUCTION Redis (Upstash Redis production)
REDIS_URL="rediss://default:your-prod-token@prod-redis.upstash.io:6379"
UPSTASH_REDIS_REST_URL="https://prod-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-production-upstash-token"

# Vercel Integration
VERCEL_OIDC_TOKEN="your-production-vercel-oidc-token"

# Production optimization (минимальный debug)
WEBPACK_LOGGING="false"
NEXT_TELEMETRY_DISABLED="1"
DEBUG=""
LOG_LEVEL="error"